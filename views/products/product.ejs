<div class="product-details">
    <div class="container">
        <div class="product-container">
            <div class="product-image">
                <img src='/images/<%= product.coverImage%>' alt='<%=product.name%>'>
            </div>
            <div class="product-info">
                <h4 class='product-name'><%=product.name%></h4>
                <p><%=product.description%></p>
                <span><%=product.dateAdded.toDateString()%></span>
                <span>made in usa</span>
                <span>$<%=product.price%></span>
                <div class="to-card-container">
                    <% if(exists){
                        %>
                        <a href='/shopping' class='in-card btn'>In Card</a>
                        <%
                    }else{
                        %>
                        <a href='/shopping' class='add-to-cart btn' data-id='<%=product.id%>' data-price='<%=product.price%>' >add to cart</a>
                        <%
                    } %>
                </div>
            </div>
        </div>
    </div>
    
</div>